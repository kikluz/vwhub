<div class="posts-wrapper">

	<% @posts.each do |post| %>
	<div class="post">
		<div class="post-head">
			<div class="name">
				mono block
			</div>
		</div>
		<div class="image center-blok">
			<%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>		
			<p class="caption">
				<%= post.caption %>	
			</p>
		</div>
	</div>

	<% end %>
</div>